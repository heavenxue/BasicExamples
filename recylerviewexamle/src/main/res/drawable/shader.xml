<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--阴影-->
    <item android:gravity="bottom">
        <shape>
            <size android:height="5dp"></size>
            <padding android:bottom="5dp"></padding>
            <gradient
                android:angle="-90"
                android:endColor="#ffffff"
                android:startColor="@color/colorGray"
                ></gradient>
        </shape>
    </item>
    <!--底边-->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <padding android:bottom="1dp"></padding>
            <size android:height="1dp"></size>
            <solid android:color="#bbb"></solid>
        </shape>
    </item>
</layer-list>